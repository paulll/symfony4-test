{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table" id="books">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Description</th>
                <th>Year</th>
                <th>Cover image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.description }}</td>
                <td>{{ book.year }}</td>
                <td><img height="200px" src="{{ asset('uploads/covers/' ~ book.cover) }}" /></td>
                <td>
                    <a class="btn btn-success" role="button" href="{{ path('book_show', {'id': book.id}) }}">View</a>
                    <a class="btn btn-primary" role="button" href="{{ path('book_edit', {'id': book.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" role="button" href="{{ path('book_new') }}">Create new</a>
{% endblock %}
